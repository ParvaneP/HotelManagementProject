{# templates/partials/_header.html.twig #}

    <nav class="navbar">
        <div class="navbar-left">
            <a href="{{ path('app_landing_page') }}" class="navbar-logo">
                {# <img src="{{ asset('path/to/your/logo.png') }}" alt="Logo"> #}
                <span>My Hotel</span>
            </a>
        </div>
        <div class="navbar-center">
            <ul class="navbar-menu">
            </ul>
        </div>
        <div class="navbar-right">
            {% if app.user %}
                <a href="{{ path('app_landing_page') }}" class="btn">{{ 'common.my_profile'|trans }}</a>
                <a href="{{ path('app_logout') }}" class="btn">{{ 'common.sign_out'|trans }}</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn">{{ 'common.sign_in'|trans }}</a>
                <a href="{{ path('app_register') }}" class="btn">{{ 'common.sign_up'|trans }}</a>
            {% endif %}
            <a href="{{ path('app_switch_language', {'locale': 'en'}) }}">English</a> /
            <a href="{{ path('app_switch_language', {'locale': 'fa'}) }}">Persian</a>
        </div>
    </nav>
